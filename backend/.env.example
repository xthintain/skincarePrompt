# Database Configuration
DATABASE_URL=postgresql://admin:password@localhost:5432/cosmetics_db

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
JWT_ACCESS_TOKEN_EXPIRES=900
JWT_REFRESH_TOKEN_EXPIRES=604800

# Flask/FastAPI Configuration
FLASK_ENV=development
DEBUG=True

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379/0

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_HOUR_UNAUTH=100
RATE_LIMIT_PER_HOUR_AUTH=1000

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
